<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Signature Detail Form View -->
    <record id="view_otk_rental_project_signature_form" model="ir.ui.view">
        <field name="name">otk.rental.project.signature.form</field>
        <field name="model">otk.rental.project.signature</field>
        <field name="arch" type="xml">
            <form string="Signature Details" create="0" edit="0" delete="0">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="signer_name"/>
                        </h1>
                        <h3>
                            <field name="signature_type" widget="badge"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Signature Information">
                            <field name="project_id" readonly="1"/>
                            <field name="signer_role"/>
                            <field name="sign_datetime" readonly="1"/>
                        </group>
                        <group string="Recording Details">
                            <field name="user_id" readonly="1"/>
                            <field name="ip_address" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Large Signature Image -->
                    <group string="Signature">
                        <field name="signature" 
                               widget="image" 
                               nolabel="1"
                               options="{'size': [800, 400]}"
                               class="border rounded p-3"
                               style="background: #fafafa;"/>
                    </group>
                    
                    <!-- Related Serials (if any) -->
                    <group string="Related Serial Numbers" invisible="not serial_ids">
                        <field name="serial_ids" nolabel="1" readonly="1">
                            <list>
                                <field name="serial_number"/>
                                <field name="equipment_name"/>
                                <field name="status"/>
                            </list>
                        </field>
                    </group>
                    
                    <!-- Notes -->
                    <group string="Notes" invisible="not notes">
                        <field name="notes" nolabel="1" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Signature List View -->
    <record id="view_otk_rental_project_signature_list" model="ir.ui.view">
        <field name="name">otk.rental.project.signature.list</field>
        <field name="model">otk.rental.project.signature</field>
        <field name="arch" type="xml">
            <list string="Signatures" create="0">
                <field name="sign_datetime"/>
                <field name="project_id"/>
                <field name="signature_type" widget="badge"/>
                <field name="signer_name"/>
                <field name="signer_role"/>
                <field name="user_id"/>
                <field name="signature" widget="image" options="{'size': [80, 40]}"/>
            </list>
        </field>
    </record>
    
    <!-- Signature Search View -->
    <record id="view_otk_rental_project_signature_search" model="ir.ui.view">
        <field name="name">otk.rental.project.signature.search</field>
        <field name="model">otk.rental.project.signature</field>
        <field name="arch" type="xml">
            <search string="Search Signatures">
                <field name="signer_name"/>
                <field name="project_id"/>
                <field name="signature_type"/>
                
                <filter string="Pickup" name="pickup" 
                        domain="[('signature_type', '=', 'pickup')]"/>
                <filter string="Return" name="return" 
                        domain="[('signature_type', '=', 'return')]"/>
                <filter string="Today" name="today"
                        domain="[('sign_datetime', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" 
                            context="{'group_by': 'project_id'}"/>
                    <filter string="Type" name="group_type" 
                            context="{'group_by': 'signature_type'}"/>
                    <filter string="Date" name="group_date" 
                            context="{'group_by': 'sign_datetime:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Signature Action -->
    <record id="action_otk_rental_project_signature" model="ir.actions.act_window">
        <field name="name">All Signatures</field>
        <field name="res_model">otk.rental.project.signature</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No signatures found
            </p>
            <p>
                Signatures are captured when staff members collect signatures from customers
                during pickup, return, or other rental processes.
            </p>
        </field>
    </record>
    
</odoo>